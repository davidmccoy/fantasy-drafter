<div id="home">
  <div class="hero-container">
    <div class="container">
      <div class="hero-text-container row">
        <div class="hero-text col-md">
          <div class="hero-intro">
            Don't just watch the Pro Tour.
          </div>
          <div class="hero-cta">
            <p>
              Invite your friends and draft your favorite Magic pros to compete in your own Fantasy Pro Tour league!
            </p>
            <p>
              <%= link_to "Create a League", new_user_session_path, class: "btn btn-dark" %>
            </p>
          </div>
        </div>
        <div class="hero-text col-md placeholder">
        </div>
      </div>
    </div>
  </div>
  <div class="section-container first">
    <div class="cta-container homepage-section">
      <div class="container">
        <div class="row">
          <div class="col-md">
            <div class="cta-text-container">
              <div class="cta-image-container">
                <%= image_tag "create-a-league.png" %>
              </div>
              <h3>Create a League</h3>
              <p>
                Join a league or create your own.
              </p>
            </div>
          </div>
          <div class="col-md">
            <div class="cta-text-container">
              <div class="cta-image-container">
                <%= image_tag "invite-your-friends.png" %>
              </div>
              <h3>Invite Your Friends</h3>
              <p>
                Invite your friends and create your teams.
              </p>
            </div>
          </div>
          <div class="col-md">
            <div class="cta-text-container">
              <div class="cta-image-container">
                <%= image_tag "draft-your-pros.png" %>
              </div>
              <h3>Draft Your Pros</h3>
              <p>
                Draft your favorite Magic pros and create the perfect lineup.
              </p>
            </div>
          </div>
        </div>
        <div class="row">
          <div class="col-md">
            <div class="cta-text-container homepage-actions">
              <p>
                <%= link_to "Create a League", new_user_session_path, class: "btn btn-lg btn-primary" %>
                <%= link_to "Join a League", new_user_session_path, class: "btn btn-lg btn-dark" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="section-container second">
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 10" preserveAspectRatio="none">
      <polygon fill="white" points="0,0  10,10  10,0"/>
    </svg>
    <div class="cta-container homepage-section">
      <div class="container">
        <div class="row split-row">
          <div class="col-md">
            <div class="cta-text-container">
              <h3>The best fantasy stats for Magic: the Gathering</h3>
              <p>
                Our dataset includes every Pro Tour and every Grand Prix, starting with Pro Tour Los Angeles in 1998.
              </p>
            </div>
          </div>
          <div class="col-md">
            <div class="cta-text-container">
              <h3>Upcoming Events</h3>
              <p>
                Pro Tour Guilds of Ravnica (August 3-5)
              </p>
              <p>
                World Championship (September 21-23)
              </p>
              <p>
                Pro Tour Ravnica Allegiance (TBA)
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="section-container third">
    <div class="cta-container homepage-section">
      <div class="container">
        <div class="row">
          <div class="col-md">
            <div class="">
              <h3>Sign up for news and updates about Fantasy Pro Tour!</h3>
              <div class="subscribe">
                <form>
                  <div class="form-group">
                    <input type="email" class="form-control" id="subscribe-email" aria-describedby="emailHelp" placeholder="Enter email">
                    <button type="submit" id="subscribe" class="btn btn-primary">Subscribe</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<script>
$(document).ready(function () {
  $('#subscribe').click(function (e) {
    e.preventDefault();
    console.log('clicked');
    var email = $('#subscribe-email').val();
    $.ajax({
      url: '<%= api_subscriber_path %>',
      type: 'post',
      dataType: 'json',
      data: {
        subscribe: {
          email: email
        }
      },
      success: function (data) {
        console.log(data);
        $('.subscribe').html('<p>Thanks for subscribing!</p>');
      }
    })
  });
});
</script>
