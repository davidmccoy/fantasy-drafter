<%= link_to "< Back To Your League", game_competition_league_path(@league.competition.game, @league.competition, @league) %>

<h2>Competitors In <%= @league.admin.name %>'s league For <%= @league.competition.name %></h2>

<h3>Registered Users</h3>
<% @league.league_users.each do |league_user| %>
  <p>
    <% if league_user.user == current_user %>
        <%= league_user.user.name %> (You)
    <% elsif league_user.user == @league.admin %>
      <p>
        <%= league_user.user.name %> (Admin)
      </p>
    <% else %>
        <%= league_user.user.name %>
    <% end %>
    <%= link_to "Remove", game_competition_league_league_user_path(@league.competition.game,@league.competition, @league, league_user), method: :delete, data: { confirm: "Are you sure?" } %>
  </p>
<% end %>

<h3>Add User By Email</h3>

<%= form_tag game_competition_league_league_users_path(@league.competition.game,@league.competition, @league) do %>

  <%= label_tag :email %>
  <%= email_field_tag :email, nil, required: true %>

  <%= submit_tag "Add User" %>

<% end %>
