<div class="row">
  <div class="col-md-8 offset-md-2">
    <% case @league.draft_type %>
    <% when 'snake' %>
      <%= render 'leagues/snake_info' %>
    <% when 'pick_x' %>
      <%= render 'leagues/pick_x_info' %>
    <% when 'pick_em' %>
      <%= render 'leagues/pick_em_info' %>
    <% end %>
    <div id="league-user" class="confirm">
      <h3>Please Accept or Decline Your Invitiation</h3>

      <p>
        <%= link_to "Accept", game_competition_league_league_user_path(@league.leagueable.game, @league.leagueable, @league, @league_user), method: :put, class: "btn btn-success" %>
        <%= link_to "Decline", game_competition_league_league_user_path(@league.leagueable.game, @league.leagueable, @league, @league_user), method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger" %>
      </p>

    </div>
  </div>
</div>
