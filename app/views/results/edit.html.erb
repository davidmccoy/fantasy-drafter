<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1>Edit Result</h1>
    <%= form_for [@game, @competition, @result] do |f| %>
      <p>
        <strong>Player:</strong> <%= @result.resultable.name %>
      </p>
      <div class="form-group required">
        <%= f.label :points, "Points", class: "control-label" %>
        <%= f.number_field :points, required: true, class: "form-control" %>
      </div>
      <div class="actions">
        <%= f.submit "Update", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
