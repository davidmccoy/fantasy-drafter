<div class="row">
  <div class="col-md-8 offset-md-2">
    <h2><%= @competition.name %></h2>
    <p>
      Game: <%= @competition.game.name %>
    </p>
    <p>
      Date: <%= @competition.date.localtime.strftime("%m/%d/%Y") %>
    </p>
    <p>
      Location: <%= @competition.location %>
    </p>

    <%= form_for [@competition.game, @competition, @league] do |f| %>

      <div class="form-group required">
        <%= f.label :draft_type, "Draft Type", class: "control-label" %>
        <%= select_tag "league[draft_type]", options_for_select([["Snake", "snake"], ["Pick X", "pick_x"], ["Pick 'Em", "pick_em"]], params[:draft_type]), required: true, include_blank: "Select Draft Type", class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :num_draft_rounds, "Number of Rounds", class: "control-label" %>
        <%= f.number_field :num_draft_rounds, min: 1, max: 12, required: true, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Create League", class: "btn btn-primary" %>
      </div>


    <% end %>
  </div>
</div>
