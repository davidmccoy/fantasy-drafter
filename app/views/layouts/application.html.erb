<!DOCTYPE html>
<html>
  <head>
    <title>FantasyDrafter</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>
  </head>

  <body>
    <%= nav_bar brand: "Fantasy Drafter", responsive: true do %>
      <%= menu_group pull: :right do %>
        <% if current_user && !current_user.drafts.where("start_time < ? AND completed = ?", Time.now, false).length.zero? %>
          <%= drop_down "NOW DRAFTING" do %>
            <% current_user.drafts.where("start_time < ? AND completed = ?", Time.now, false).each do |draft| %>
              <%= menu_item draft.tournament.competition.name, game_competition_tournament_draft_path(draft.tournament.competition.game, draft.tournament.competition, draft.tournament, draft) %>
            <% end %>
          <% end %>
        <% end %>
        <% if current_user %>
          <%= menu_item "Your Tournaments", users_tournaments_path %>
        <% end %>
        <%= menu_item "Find A Game", games_path %>
        <% if current_user %>
          <%= menu_item "Sign Out", destroy_user_session_path, method: "delete" %>
        <% else %>
          <%= menu_item "Sign In", new_user_session_path %>
        <% end %>
      <% end %>
    <% end %>

    <div class="container-fluid">
      <% if notice || alert  %>
      <div id="notice">
        <% if notice %>
        <span class="notice"><%= notice %></span>
        <% elsif alert %>
        <span class="alert"><%= alert %></span>
        <% end %>
      </div>
      <% end %>

      <%= yield %>
    </div>

  </body>
</html>
