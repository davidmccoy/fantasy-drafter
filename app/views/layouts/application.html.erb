<!DOCTYPE html>
<html>
  <head>
    <title>FantasyDrafter</title>
    <%= csrf_meta_tags %>
    <link href="https://fonts.googleapis.com/css?family=Raleway" rel="stylesheet">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= action_cable_meta_tag %>

    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
  </head>

  <body>
    <%= render "layouts/nav" %>

    <div id="content">
      <% if request.env['PATH_INFO'] != "/" %>
        <div class="container-fluid">
      <% end %>
      <% if alert %>
        <div class="alert alert-danger alert-dismissible fade show col-sm-6 offset-sm-3" role="alert">
          <%= alert %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% elsif notice %>
        <div class="alert alert-success alert-dismissible fade show col-sm-6 offset-sm-3" role="alert">
          <%= notice %>
          <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
      <% end %>

      <%= yield %>
      <% if request.env['PATH_INFO'] != "/" %>
        </div>
      <% end %>
    </div>
    <%= render "layouts/footer" %>
  </body>
</html>
