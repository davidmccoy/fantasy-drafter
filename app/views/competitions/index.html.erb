<div class="row">
  <div class="col-md-8 offset-md-2">
    <div>
      <h2>Featured <%= @game.name %> Events</h2>
    </div>
    <div>
      <% if @competitions.where("date >= ? AND date <= ?", Time.now, Time.now + 2.weeks).length > 0 %>
        <% @competitions.where("date >= ? AND date <= ?", Time.now, Time.now + 2.weeks).each do |competition| %>
            <div class="competition-header-image hero-image inline-hero-image" style="background-image: url('<%= image_path 'mtgchamp18-header.jpg' %>')">
              <div class="container">
                <div class="row">
                  <div class="col-md">
                    <%= competition.name %>
                  </div>
                </div>
              </div>
            </div>
            <div class="competition-info">
              <div class="row">
                <div class="col-md">
                  <p>
                    Date: <%= competition.date.localtime.strftime("%m/%d/%Y") %>
                  </p>
                </div>
                <div class="col-md">
                  <p>
                    Location: <%= competition.location %>
                  </p>
                </div>
                <div class="col-md">
                  <p>
                    <%= link_to "View Leagues", game_competition_leagues_path(competition.game, competition), class: "btn btn-primary" %>
                  </p>
                </div>
              </div>
            </div>
        <% end %>
      <% else %>
        <p>
          There are no active events. Check back soon!
        </p>
      <% end %>
    </div>
    <div>
      <h2>Previous Events</h2>
    </div>
    <div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>
              Name
            </th>
            <th>
              Date
            </th>
            <th>

            </th>
            <% if current_user&.admin %>
              <th>

              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @competitions.where("date <= ?", Time.now).order(date: :desc).each do |competition| %>
            <tr>
              <td>
                <%= competition.name %>
              </td>
              <td>
                <%= competition.date.localtime.strftime("%m/%d/%Y") %>
              </td>
              <td>
                <%= link_to "Results", game_competition_results_path(competition.game, competition), class: "btn btn-primary" %>
              </td>
              <% if current_user&.admin %>
                <td>
                  <%= link_to "View", game_competition_path(@game, competition), class: "btn btn-secondary" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
<script>
  $('.table').stacktable();
</script>
