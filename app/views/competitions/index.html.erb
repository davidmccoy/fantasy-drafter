<div class="row">
  <div class="col-md-8 offset-md-2">
    <div>
      <h2>Active <%= @game.name %> Events</h2>
      <p>
        <%= link_to "Add New Competition", new_game_competition_path(@game), class: "btn btn-sm btn-light" if current_user.admin %>
      </p>
    </div>
    <div>
      <% if @competitions.where("date >= ?", Time.now).length > 0 %>
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>
                Name
              </th>
              <th>
                Date
              </th>
              <th>

              </th>
            </tr>
          </thead>
          <tbody>
            <% @competitions.where("date >= ?", Time.now).each do |competition| %>
              <tr>
                <td>
                  <%= competition.name %>
                </td>
                <td>
                  <%= competition.date.localtime.strftime("%m/%d/%Y") %>
                </td>
                <td>
                  <%= link_to "Create League!", new_game_competition_league_path(competition.game, competition), class: "btn btn-primary" %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      <% else %>
        <p>
          There are no active events. Check back soon!
        </p>
      <% end %>
    </div>
    <div>
      <h2>Previous <%= @game.name %> Events</h2>
    </div>
    <div>
      <table class="table table-bordered table-hover">
        <thead>
          <tr>
            <th>
              Name
            </th>
            <th>
              Date
            </th>
            <th>

            </th>
            <% if current_user.admin %>
              <th>

              </th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% @competitions.order(date: :desc).each do |competition| %>
            <tr>
              <td>
                <%= competition.name %>
              </td>
              <td>
                <%= competition.date.localtime.strftime("%m/%d/%Y") %>
              </td>
              <td>
                <%= link_to "Results", game_competition_results_path(competition.game, competition), class: "btn btn-primary" %>
              </td>
              <% if current_user.admin %>
                <td>
                  <%= link_to "View", game_competition_path(@game, competition), class: "btn btn-secondary" %>
                </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
