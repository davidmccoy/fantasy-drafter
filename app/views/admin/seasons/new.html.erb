<div class="row">
  <div class="col-md-8 offset-md-2">
    <h1>Create New Season</h1>
    <%= form_for @season, url: admin_seasons_path do |f| %>

      <div class="form-group required">
        <%= f.label :game_id, "Game",  class: "control-label" %>
        <%= select_tag "season[game_id]", options_from_collection_for_select(Game.all.reverse, 'id', 'name'), include_blank: "Select Game", required: true, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :name, class: "control-label" %>
        <%= f.text_field :name, required: true, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :slug, class: "control-label" %>
        <%= f.text_field :slug, required: true, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :start_date, "Start Date", class: "control-label" %>
        <%= f.date_field :start_date, required: true, class: "form-control" %>
      </div>

      <div class="form-group required">
        <%= f.label :end_date, "End Date", class: "control-label" %>
        <%= f.date_field :end_date, required: true, class: "form-control" %>
      </div>

      <div class="actions">
        <%= f.submit "Create Season", class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
